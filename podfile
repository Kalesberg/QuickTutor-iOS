#Uncomment the next line to define a global platform for your project

 platform :ios, '9.0'

abstract_target 'QuickTutorApp' do
    # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
    inhibit_all_warnings!
    
    def shared_pods
        # Pods for Firebase
        pod 'Firebase/Core'
        pod 'Firebase/Auth'
        pod 'Firebase/Storage'
        pod 'Firebase/Database'
        pod 'Firebase/DynamicLinks'
        pod 'Firebase/Messaging'
        pod 'GoogleAnalytics'
        pod 'FirebaseUI/Storage'
        pod 'SDWebImage'
        pod 'SwiftyJSON', '~> 4.2.0'

        # Pods for backend
        pod 'Alamofire', '~>4.5'
        pod 'SwiftKeychainWrapper'
        pod 'GeoFire'
        pod 'Stripe'

        # Pods for Facebook
        pod 'AccountKit'
        pod 'FacebookCore', '~> 0.4.0'
        pod 'FacebookLogin', '~> 0.4.0'
        pod 'SnapKit', '~> 4.0.1'
        pod 'lottie-ios', '~> 2.5.3'

        # Pods for Sessions
        #  pod 'Reveal-SDK', :configurations => ['Debug']
        pod 'TwilioVideo'
        pod 'Socket.IO-Client-Swift', '~> 13.1.0'

        #Pods for Crashlytics & Performance
        pod 'Fabric'
        pod 'Crashlytics'
        pod 'Firebase/Performance'
        pod 'Branch'
        
        pod 'SwipeCellKit'
        pod 'Imaginary'
        pod 'IQKeyboardManager'
        pod 'Charts', '~> 3.2.1'
        pod 'PlaceholderTextView'
        pod 'CropViewController'
        pod 'CardScan'
        pod 'CardScan/Stripe'
        
        pod 'SkeletonView'
    end
    
    target 'QuickTutor' do
        use_frameworks!

        shared_pods

        target 'QuickTutorTests' do
            inherit! :search_paths
        end
    end
    target 'QuickTutorDev' do
        use_frameworks!
        
        shared_pods
    end
    target 'QuickTutorUITests' do
    end
end

